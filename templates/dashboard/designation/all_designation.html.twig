{% extends 'dashboard_base.html.twig' %}

{% block title %}All Designations{% endblock %}

{% block body %}
    {% include 'partials/header.html.twig' %}
<div class="slim-body">
    {% include 'partials/sidebar.html.twig' with departments %}
    <div class="slim-mainpanel">
        <div class="container">
            <div class="slim-pageheader">
                <ol class="breadcrumb slim-breadcrumb">
                    <a href="{{ url('designation_add') }}" class="btn btn-primary">Add Designation</a>
                </ol>
                <h6 class="slim-pagetitle">All Designations</h6>
            </div><!-- slim-pageheader -->
            <div class="row">
                <div class="col-lg-12">
                    <table class="table table-striped table-bordered">
                        <tr>
                            <thead>
                                <tr>
                                    <th>Sr.</th>
                                    <th>Designation</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                               {% for designation in designations %}
                                   <tr>
                                       <td>{{ loop.index }}</td>
                                       <td>{{ designation.designation }}</td>
                                       <td>
                                           {% if designation.id != 1 %}
                                           <a href="#" class="btn btn-success btn-sm">
                                               <i class="fa fa-pencil"></i>
                                           </a>
                                           {% endif %}
                                       </td>
                                   </tr>
                                {% endfor %}
                            </tbody>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}