{% extends 'dashboard_base.html.twig' %}

{% block title %}All Designations{% endblock %}

{% block body %}
    {% include 'partials/header.html.twig' %}
<div class="slim-body">
    {% include 'partials/sidebar.html.twig' with departments %}
    <div class="slim-mainpanel">
        <div class="container">
            <div class="slim-pageheader">
                <ol class="breadcrumb slim-breadcrumb">
                    <a href="{{ url('designation_all') }}" class="btn btn-primary">All Designation</a>
                </ol>
                <h6 class="slim-pagetitle">All Designations</h6>
            </div><!-- slim-pageheader -->
            <div class="section-wrapper">
                <div class="section-title">Add designation</div>
                <div class="row mg-t-5">
                    <div class="col-lg-12">
                        <form action="" method="post" id="addDesignation">
                            {% for label, messages in app.flashes %}
                                {% for message in messages %}
                                    <div class="alert alert-{{ label }}">
                                        {{ message }}
                                    </div>
                                {% endfor %}
                            {% endfor %}
                            <div class="form-group">
                                <label for="designation">Designation</label>
                                <input data-parsley-trigger="keyup" pattern="[a-zA-Z]+" type="text" name="designation" required class="form-control">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">ADD DESIGNATION</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('assets/lib/parsleyjs/js/parsley.js') }}"></script>
{% endblock %}
{% block editionalScripts %}
    <script>
        $(document).ready(function () {
            $("#addDesignation").parsley();
        });
    </script>
{% endblock %}