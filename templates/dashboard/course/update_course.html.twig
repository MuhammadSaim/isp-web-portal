{% extends 'dashboard_base.html.twig' %}

{% block title %}Update course{% endblock %}

{% block body %}
    {% form_theme form 'form/form_errors.html.twig' %}
    {% include 'partials/header.html.twig' %}
    <div class="slim-body">
        {% include 'partials/sidebar.html.twig' with departments %}
        <div class="slim-mainpanel">
            <div class="container">
                <div class="slim-pageheader">
                    <ol class="breadcrumb slim-breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Blank Page</li>
                    </ol>
                    <h6 class="slim-pagetitle">Add course</h6>
                </div><!-- slim-pageheader -->
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-lg-12">
                        <div class="section-wrapper">
                            <label class="section-title">add course</label>
                            {{ form_start(form) }}
                            <div class="form-layout">
                                {% for label, messages in app.flashes %}
                                    {% for message in messages %}
                                        <div class="alert alert-{{ label }}">
                                            {{ message }}
                                        </div>
                                    {% endfor %}
                                {% endfor %}
                                <div class="row mg-t-25 mg-b-25">
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            {{ form_label(form.course) }}
                                            {{ form_widget(form.course) }}
                                            {{ form_errors(form.course) }}
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            {{ form_label(form.courseCode) }}
                                            {{ form_widget(form.courseCode) }}
                                            {{ form_errors(form.courseCode) }}
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            {{ form_label(form.creditHours) }}
                                            {{ form_widget(form.creditHours) }}
                                            {{ form_errors(form.creditHours) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="form-layout-footer">
                                    <button type="submit" class="btn btn-primary">ADD COURSE</button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

